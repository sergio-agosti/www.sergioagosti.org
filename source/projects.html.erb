<% content_for :title, "Projects - Sergio Agosti" %>

<%= partial "layouts/header", :locals => { :title => "Projects" } %>

<div class="page__body">

    <div class="page__content">

        <main role="main">
            <ol>
        	<% data.projects.each do |project| %>
        		<li class="space--2x">
            		<article>
                        <time datetime="<%= project.published %>"><%= project.published.strftime("%d/%m/%Y") %></time>
                        <h1><%= link_to project.name, "/projects/#{project.slug}.html" %></h1>
                    <% if project.images and project.images.thumb %>
                        <p class="bleed">
                            <% link_to "/projects/#{project.slug}.html" do %>
                                <%= image_tag "projects/#{project.slug}/#{project.images.thumb.src}", :alt => project.images.thumb.alt %>
                            <% end %>
                        </p>
                    <% end %>
                    </article>
        		</li>
            <% end %>
        	</ol>
        </main>
    
    </div>

</div>

<%= partial "layouts/footer",
    :locals => {
        :navigation => { :active => '/projects.html' },
        :breadcrumb => [
            { :text => "About", :path => '/index.html' },
            { :text => "Projects" }
        ]
    }
%>