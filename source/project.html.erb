<% content_for :title, "#{project.name} web project - Sergio Agosti, Open-source Web Developer" %>

<%= partial "layouts/header", :locals => { :title => project.name } %>

<div class="page__body">

    <div class="page__content--row">

        <main role="main">
            <%= partial "content/projects/#{project.slug}/description" %>
            <p><%= lorem.paragraph %></p>
        </main>
        
        <aside role="complementary">
            <p>tags, etc...</p>
        </aside>
    
    </div>
    
    <div class="gallery">
        <ul class="gallery__list">
            <li>
                <figure>
                    <figcaption class="gallery__caption"><p>small screen</p></figcaption>
                    <p class="gallery__image gallery__image--small"><%= image_tag "projects/#{project.slug}/#{project.images.small.src}", :alt => project.images.small.alt %></p>
                </figure>
            </li>
            <li>
                <figure>
                    <figcaption class="gallery__caption"><p>large screen</p></figcaption>
                    <p class="gallery__image gallery__image--large"><%= image_tag "projects/#{project.slug}/#{project.images.large.src}", :alt => project.images.large.alt %></p>
                </figure>
            </li>
            <li>
                <figure>
                    <figcaption class="gallery__caption"><p>extra-large screen</p></figcaption>
                    <p class="gallery__image gallery__image--extra"><%= image_tag "projects/#{project.slug}/#{project.images.extra.src}", :alt => project.images.extra.alt %></p>
                </figure>
            </li>
        </ul>
    </div>
    
    <p class="page__content">Next project: <a href="#">Another awesome project!</a></p>

    <%= partial "layouts/breadcrumb",
        :locals => {
            :breadcrumb => [
                { :text => "Sergio Agosti", :path => '/index.html' },
                { :text => "Projects", :path => '/projects.html' },
                { :text => project.name }
            ]
        }
    %>

</div>

<%= partial "layouts/footer", :locals => { :navigation => { :active => '/projects.html' } } %>